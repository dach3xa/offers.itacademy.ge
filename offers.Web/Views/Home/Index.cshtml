@{
    ViewData["Title"] = "Welcome";
}

<div class="text-center mt-5">
    <h1 class="display-4">Welcome to <span class="text-primary">offers.ITAcademy</span></h1>
    <p class="lead mb-4">Discover exclusive offers or get started by registering below.</p>

    <div class="d-flex justify-content-center gap-3 flex-wrap mb-4">
        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">Login</a>
        <a asp-controller="Account" asp-action="RegisterUser" class="btn btn-outline-success btn-lg">Register as User</a>
        <a asp-controller="Account" asp-action="RegisterCompany" class="btn btn-outline-warning btn-lg">Register as Company</a>
    </div>

    <hr class="my-4" />

    <h4 class="mb-3">Browse Public Content</h4>
    <div class="d-flex justify-content-center gap-3 flex-wrap">
        <a asp-controller="Home" asp-action="Offers" class="btn btn-info text-white">View All Offers</a>
        <a asp-controller="Home" asp-action="Categories" class="btn btn-secondary">Browse Categories</a>
    </div>
</div>