@model IEnumerable<offers.Application.Models.Response.CategoryResponseModel>

@{
    ViewData["Title"] = "Browse Offers by Category";
}

<h2 class="mb-4">Select Categories to View Offers</h2>

<form asp-action="GetOffersByCategoryIds" asp-controller="User" method="get">
    <div class="mb-3">
        @foreach (var category in Model)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="ids" value="@category.Id" id="cat_@category.Id" />
                <label class="form-check-label" for="cat_@category.Id">
                    @category.Name
                </label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary mt-2">Search Offers</button>
</form>