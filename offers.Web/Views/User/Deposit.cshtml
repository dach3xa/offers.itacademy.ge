@model offers.Application.Models.DTO.DepositRequestDTO

@{
    ViewData["Title"] = "Deposit Funds";
}

<h2 class="mb-4">Deposit Funds</h2>

<form asp-action="Deposit" asp-controller="User" method="post">
    <div class="mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" type="number" step="0.01" min="0.01" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Deposit</button>
    <a asp-action="Home" asp-controller="User" class="btn btn-secondary ms-2">Cancel</a>
</form>