@model offers.Application.Models.Response.OfferResponseModel

@{
    ViewData["Title"] = "Offer Details";
}

<h2 class="mb-4">Offer: @Model.Name</h2>

<div class="card shadow-sm mb-4">
    <div class="row g-0">
        <div class="col-md-5">
            <img src="@Model.PhotoURL" alt="@Model.Name" class="img-fluid rounded-start" style="object-fit: cover; width: 100%; height: 100%;">
        </div>
        <div class="col-md-7">
            <div class="card-body">
                <h4 class="card-title">@Model.Name</h4>
                <p class="card-text">@Model.Description</p>
                <p class="card-text"><strong>Category:</strong> @Model.CategoryName</p>
                <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>
                <p class="card-text"><strong>Available:</strong> @Model.Count</p>
                <p class="card-text"><strong>Archived At:</strong> @Model.ArchiveAt.ToString("f")</p>

                <a asp-action="CreateTransaction" asp-controller="User" asp-route-id="@Model.Id" class="btn btn-success mt-3">Purchase</a>
                <a asp-action="Offers" asp-controller="User" class="btn btn-secondary mt-3 ms-2">Back to Offers</a>
            </div>
        </div>
    </div>
</div>