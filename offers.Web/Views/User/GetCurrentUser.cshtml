@model offers.Application.Models.Response.UserResponseModel

@{
    ViewData["Title"] = "My Profile";
}

<h2 class="mb-4">My Profile</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title">@Model.FirstName @Model.LastName</h4>
        <p class="card-text"><strong>Email:</strong> @Model.Email</p>
        <p class="card-text"><strong>Phone:</strong> @Model.PhoneNumber</p>
        <p class="card-text"><strong>Role:</strong> @Model.Role</p>
        <p class="card-text"><strong>Balance:</strong> @Model.Balance.ToString("C")</p>

        <a asp-action="Home" asp-controller="User" class="btn btn-secondary mt-3">Back to Dashboard</a>
    </div>
</div>