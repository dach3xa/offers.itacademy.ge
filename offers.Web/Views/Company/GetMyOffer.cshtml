@model offers.Application.Models.Response.OfferResponseModel

@{
    ViewData["Title"] = "Offer Details";
}

<h2 class="mb-4">Offer: @Model.Name</h2>

<div class="card shadow-sm mb-4">
    <div class="row g-0">
        <div class="col-md-5">
            <img src="@Model.PhotoURL" alt="@Model.Name" class="img-fluid rounded-start" style="object-fit: cover; width: 100%; height: 100%;">
        </div>
        <div class="col-md-7">
            <div class="card-body">
                <h4>@Model.Name</h4>
                <p>@Model.Description</p>
                <p><strong>Category:</strong> @Model.CategoryName</p>
                <p><strong>Count:</strong> @Model.Count</p>
                <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
                <p><strong>Archived At:</strong> @Model.ArchiveAt.ToString("f")</p>

                <form asp-action="DeleteOffer" asp-controller="Company" asp-route-id="@Model.Id" method="post" class="mt-3">
                    <button type="submit" class="btn btn-danger">Delete Offer</button>
                    <a asp-action="GetMyOffers" asp-controller="Company" class="btn btn-secondary ms-2">Back to My Offers</a>
                </form>
            </div>
        </div>
    </div>
</div>