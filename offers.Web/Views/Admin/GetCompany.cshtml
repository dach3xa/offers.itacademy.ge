@model offers.Application.Models.Response.CompanyResponseModel

@{
    ViewData["Title"] = "Company Details";
}

<h2 class="mb-4">Company: @Model.CompanyName</h2>

<div class="card shadow-sm mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.PhotoURL" class="img-fluid rounded-start" alt="@Model.CompanyName Logo" style="object-fit: cover; width: 100%; height: 100%;">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <p><strong>ID:</strong> @Model.Id</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                <p><strong>Role:</strong> @Model.Role</p>
                <p><strong>Active:</strong> @(Model.IsActive ? "Yes" : "No")</p>

                @if (!Model.IsActive)
                {
                    <form asp-action="ConfirmCompany" asp-controller="Admin" asp-route-id="@Model.Id" method="post" class="mt-3">
                        <button type="submit" class="btn btn-success">Confirm Company</button>
                    </form>
                }
                else
                {
                    <div class="alert alert-success mt-3">This company is already active.</div>
                }

                <a asp-action="GetAllCompanies" asp-controller="Admin" class="btn btn-secondary mt-3">Back to Companies</a>
            </div>
        </div>
    </div>
</div>